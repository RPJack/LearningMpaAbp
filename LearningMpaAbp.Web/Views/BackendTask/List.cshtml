@using Abp.Web.Mvc.Extensions
@{
    ViewBag.Title = "BackendTaskList";
    ViewBag.ActiveMenu = "BackendTaskList";
}
<!--加载BootStrap table的样式-->
<link href="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.css" rel="stylesheet" />
@section scripts{
    @Html.IncludeScript("~/Views/BackendTask/List.js");
    <!--加载BootStrap table的script脚本-->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/bootstrap-table.min.js"></script>
    <!--Latest compiled and minified Locales 各个屏幕适应-->
    <script src="http://cdnjs.cloudflare.com/ajax/libs/bootstrap-table/1.11.0/locale/bootstrap-table-zh-CN.min.js"></script>
}
<link href="#" rel="stylesheet" />

<div class="row">
    <div class="panel-body">
        <!--过滤框-->
        <div class="panel panel-default">
            <div class="panel-heading">查询条件</div>
            <div class="panel-body">
                <form id="formSearch" class="form-horizontal" action="/" method="post">
                    <div class="form-group" style="margin-top:15px;">
                        <label class="control-label col-sm-1" for="txt-filter">任务名称</label>
                        <div class="col-sm-3">
                            <input id="txt-filter" type="text" class="form-control" style="background-color:darkgray" name="name" value="" />
                        </div>

                        <label class="control-label col-sm-1" for="txt-filter">状态</label>
                        <div class="col-sm-3">
                            @Html.DropDownList("TaskStateDropdownList",null,new { id="txt-search-status",@class = "form-control"})
                        </div>

                        <div class="col-sm-4" style="text-align:left">
                            <button type="button" style="margin-left:50px;" class="btn btn-primary" id="btn-query">查询</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--bootStrap指定的工具栏-->
    <div id="toolbar" class="btn-group">
        <button id="btn-add" type="button" class="btn btn-primary">
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>新增
        </button>
        <button id="btn-edit" type="button" class="btn btn-success">
            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>修改
        </button>
        <button id="btn-delete" type="button" class="btn btn-danger">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>删除
        </button>
    </div>
    <!--bootStrap-table表格-->
    <table id="tb-tasks"></table>
</div>

<!--初始加载页面时提前将创建任务的模态框加载进来-->
@Html.Partial("_CreateTask")

<!--编辑模态框通过ajax动态填充到此div中-->
<div id="edit"></div>
